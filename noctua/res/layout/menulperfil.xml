            android:src="@drawable/bckperfil" />

        <com.syp4.noctua.ui.NoctuaTextView android:textSize="17.0sp" android:textColor="#fefefe" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_title" android:layout_width="fill_parent" android:layout_height="45.0dip" android:layout_marginRight="10dip"
                                           foo:customFont="Fonts/HelveticaNeueLight.ttf"
                                                  android:ellipsize="end" android:singleLine="false"
                                                  android:layout_marginLeft="10dip" android:text="Elemento"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</LinearLayout>