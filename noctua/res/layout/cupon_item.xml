<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:id="@+id/imagenoferta"
        android:scaleType="fitXY"
        android:clickable="false"
        android:visibility="visible" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="54dp"
        android:layout_height="70dp"
        android:background="@drawable/panelfechaoferta"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <com.syp4.noctua.ui.NoctuaTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:id="@+id/dia"
            android:gravity="center"
            foo:customFont="Fonts/HelveticaNeueLight.ttf"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-2dp" />

        <com.syp4.noctua.ui.NoctuaTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mes"
            android:id="@+id/mes"
            android:gravity="center"
            foo:customFont="Fonts/HelveticaNeueLight.ttf"
            android:textSize="19sp"
            android:visibility="visible"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-9dp"
            android:textColor="#ffffff"
            android:textIsSelectable="false" />

        <com.syp4.noctua.ui.NoctuaTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/hora"
            android:gravity="center_horizontal"
            foo:customFont="Fonts/HelveticaNeueLight.ttf"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_marginTop="120dp"
        android:background="#f2f2f2f3"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/imagenempresa"
            android:scaleType="fitXY"
            android:clickable="false"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-8dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <com.syp4.noctua.ui.NoctuaTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nombre"
                foo:customFont="Fonts/HelveticaNeueLight.ttf"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:textSize="18sp"
                android:textColor="#3f9dd9"
                android:layout_marginRight="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="-2dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ubicacion"
                    android:scaleType="fitXY" />

                <com.syp4.noctua.ui.NoctuaTextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text=""
                    android:id="@+id/empresa"
                    android:textSize="15sp"
                    android:textColor="#666c73"
                    foo:customFont="Fonts/HelveticaNeueLight.ttf"
                    android:gravity="center_vertical|left" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/distancia"
                    android:scaleType="fitXY"
                    android:layout_gravity="top" />

                <com.syp4.noctua.ui.NoctuaTextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:text=""
                    android:id="@+id/kilometros"
                    foo:customFont="Fonts/HelveticaNeueLight.ttf"
                    android:textSize="15sp"
                    android:textColor="#666c73"
                    android:layout_gravity="bottom|right"
                    android:gravity="bottom|left"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-2dp"
        android:layout_gravity="bottom"
        android:background="#e6e6e6"></LinearLayout>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/favorito"
        android:layout_gravity="bottom|right"
        android:src="@drawable/favorito"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lltransparente">

    </LinearLayout>

    <com.syp4.noctua.ui.NoctuaTextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="PROCESADO"
        android:id="@+id/cupon_finalizado"
        android:layout_gravity="left"
        foo:customFont="Fonts/HelveticaNeueBold.ttf"
        android:gravity="center"
        android:textColor="#ffffff"
        android:visibility="gone"
        android:textSize="28sp" />

</FrameLayout>