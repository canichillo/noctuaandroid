<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:foo="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/ayuda5_imagenprincipal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/favoritos" />

        <com.syp4.noctua.ui.NoctuaTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podrá seleccionar que empresas son sus favoritas, así podrá acceder a las ofertas de estas empresas de una forma más rápida."
            android:id="@+id/textView"
            android:textColor="#ffffff"
            foo:customFont="Fonts/HelveticaNeueLight.ttf"
            android:textSize="19sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

</FrameLayout>